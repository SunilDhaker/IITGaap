<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sunil.dhaker.iitgnotif.AddLostFound">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alf_item_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Item Name Here "
        android:background="@android:drawable/editbox_background"
        android:autoText="false" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alf_item_description"
        android:hint="Item Name Here "
        android:background="@android:drawable/editbox_background"
        android:autoText="false"
        android:layout_below="@+id/alf_item_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="top" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/alf_date"
        android:hint="Choose date"
        android:layout_below="@+id/alf_item_description"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alf_venue"
        android:layout_toEndOf="@+id/alf_date"
        android:layout_below="@+id/alf_item_description"
        android:layout_alignEnd="@+id/alf_item_description"
        android:layout_alignBottom="@+id/alf_date"
        android:singleLine="false"
        android:hint="Where ?" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/alf_button_submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/alf_mobile"
        android:layout_below="@+id/alf_date"
        android:layout_alignParentStart="true"
        android:hint="Your Mobile No" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alf_user_detail"
        android:layout_below="@+id/alf_mobile"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/alf_venue"
        android:hint="Your detail (like: room no , hostel )" />
</RelativeLayout>
