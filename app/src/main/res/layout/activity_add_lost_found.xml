<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sunil.dhaker.iitgnotif.AddLostFound">

    <EditText
        android:id="@+id/alf_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:background="@android:drawable/editbox_background"
        android:hint="Item Name Here " />

    <EditText
        android:id="@+id/alf_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alf_item_name"
        android:autoText="false"
        android:background="@android:drawable/editbox_background"
        android:gravity="top"
        android:hint="Item Description Here "
        android:minHeight="100dp" />

    <EditText
        android:id="@+id/alf_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alf_item_description"
        android:ems="10"
        android:hint="Choose date"
        android:inputType="date" />

    <EditText
        android:id="@+id/alf_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/alf_date"
        android:layout_alignEnd="@+id/alf_item_description"
        android:layout_below="@+id/alf_item_description"
        android:layout_toEndOf="@+id/alf_date"
        android:hint="Where ?"
        android:singleLine="false" />

    <Button
        android:id="@+id/alf_button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Submit" />

    <EditText
        android:id="@+id/alf_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alf_date"
        android:ems="10"
        android:hint="Your Mobile No"
        android:inputType="phone" />

    <EditText
        android:id="@+id/alf_user_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/alf_venue"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alf_mobile"
        android:hint="Your detail (like: room no , hostel )" />
</RelativeLayout>
